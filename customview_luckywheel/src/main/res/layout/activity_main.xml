<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bodhi.customview_luckywheel.LuckyWheel
            android:id="@+id/luckyWheel"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:sectorNum="6"
            android:layout_gravity="center_horizontal" />

        <com.bodhi.customview_luckywheel.LuckyWheel
            android:id="@+id/luckyWheel2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:edgeDecorateRes="@mipmap/ic_wheel_bg"
            app:perSectorRotateTime="70"
            app:rotateTimes="3"
            app:sectorNum="6"
            app:sectorNames="@array/wheel_names"
            app:sectorIcons="@array/wheel_icons"
            app:sectorBgColors="@array/wheel_colors_bg"
            app:sectorTextColors="@array/wheel_colors_tv"
            app:wheelStartIc="@mipmap/ic_wheel_start" />

        <com.bodhi.customview_luckywheel.LuckyWheel
            android:id="@+id/luckyWheel3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            app:sectorNum="8"
            app:wheelBigIc="@mipmap/ic_wheel_big_icon"
            app:wheelStartIc="@mipmap/ic_wheel_start" />

    </LinearLayout>

</ScrollView>